#!/bin/bash
ls

sudo su

apt-get update -y

docker -v

apt install docker.io

docker -v

docker info

service docker start

docker run -it --name incels -p 8000:80 ubuntu:22.04 /bin/bash

exit

docker container ls

docker container ls -a

docker container start


docker container exec -it incels /bin/bash

apt-get update -y

apt-get install apache2 -y

service apache2 start

service apache2 status

apt-get install net-tools -y

exit

docker container stop incels

docker container ls -a

docker commit incels ash

docker image ls
